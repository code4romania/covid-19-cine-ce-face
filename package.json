{
  "name": "whos-who",
  "author": "code4romania",
  "version": "1.0.0",
  "description": "Explicarea rolului și subordonarea instituțiilor în timpul stării de urgență.",
  "private": true,
  "dependencies": {
    "@code4ro/taskforce-fe-components": "^2.0.1",
    "bulma": "^0.8.0",
    "fuse.js": "^6.0.0",
    "query-string": "^6.12.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-ga": "^2.7.0",
    "react-icons": "^3.9.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "**/serviceWorker.js",
      "src/data/**/*.js",
      "node_modules/"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code4romania/whos-who.git"
  },
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/code4romania/whos-who/issues"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.3.5",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "node-sass": "^7.0.0",
    "prettier": "^2.0.5"
  }
}
